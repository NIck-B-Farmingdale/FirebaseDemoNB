<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.WelcomeController">
    <children>
        <Label text="Welcome to the App" style="-fx-font-size: 24px;" />
        <Label fx:id="statusLabel" textFill="RED" />
        <TextField fx:id="emailField" prefWidth="250.0" promptText="Email" />
        <PasswordField fx:id="passwordField" prefWidth="250.0" promptText="Password" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="registerButton" onAction="#registerButtonClicked" prefHeight="30.0" prefWidth="100.0" text="Register" />
                <Button fx:id="signInButton" onAction="#signInButtonClicked" prefHeight="30.0" prefWidth="100.0" text="Sign In" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
